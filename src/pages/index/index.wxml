<!-- ttopBar样式 -->
<view class="cu-custom" style="height:{{CustomBar}}px;">
  <view class="cu-bar bg-gradual-orange" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
    <view class="content" style="top:{{StatusBar}}px;">近邻生活</view>
  </view>
</view>
<!-- 内容 -->
<!-- 轮播图 -->
<swiper class="screen-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" autoplay="true" indicator-color="rgba(255, 255, 255, .3)" indicator-active-color="rgba(210, 34, 34, .7)" current="0" current-item-id="" interval="3000" duration="1000" circular="true" vertical="false">
  <block wx:for="{{imagesUrl}}" wx:key="{{item.id}}">
    <swiper-item>
      <image src="{{item.img}}" mode='aspectFill' />
    </swiper-item>
  </block>
</swiper>
